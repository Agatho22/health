<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:textSelectHandle">@color/colorPrimary</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
        <item name="android:textCursorDrawable">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="link">
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#993C3C43</item>
    </style>

    <style name="water">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#0c3a97</item>
    </style>

    <style name="LoginText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:ems">10</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RegistarText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:ems">10</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LoginButton" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">275dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ActivityCard" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">380dp</item>
        <item name="android:layout_height">100dp</item>
    </style>


</resources>