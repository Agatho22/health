<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="android:textSelectHandle">@color/colorPrimary</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
        <item name="android:textCursorDrawable">@color/colorPrimary</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="link">
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#993C3C43</item>
    </style>

    <style name="equivalent_">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="highlights">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="details">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#0070FF</item>
    </style>

    <style name="steps">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#365EE9</item>
    </style>

    <style name="for_you">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="you_step">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="steps_to_re">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="some_id">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="summary">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="last_night_">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FF9C8A</item>
    </style>


    <style name="stime">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="water">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#0c3a97</item>
    </style>

    <style name="LoginText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:ems">10</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RegistarText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:ems">10</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LoginButton" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">275dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ActivityCard" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">380dp</item>
        <item name="android:layout_height">100dp</item>
    </style>


</resources>
