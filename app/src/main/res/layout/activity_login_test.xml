<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivityF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <!--큰 레이아웃 없으면 안됌. 스크롤뷰는 하나의 위젯만 있어야하기때문-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <!--아이디, 페스워드 시작-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <!--아이디 시작-->
                <EditText
                    android:id="@+id/et_email"
                    style="@style/LoginText"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/row_light_s"
                    android:drawableStart="@drawable/ic_email"
                    android:hint="아이디"
                    android:inputType="textEmailAddress"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:alpha="0.2"
                    android:background="@drawable/divider" />
                <!--아이디 끝-->

                <!--페스워드 시작-->
                <EditText
                    android:id="@+id/et_pwd"
                    style="@style/LoginText"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/row_light_s"
                    android:drawableStart="@drawable/ic_lock"
                    android:hint="패스워드"
                    android:inputType="textPassword"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_email" />
                <View
                    android:id="@+id/divider"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:alpha="0.2"
                    android:background="@drawable/divider" />
                <!--페스워드 끝-->

                <!--자동로그인 시작-->
                <CheckBox
                    android:id="@+id/cb_auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자동 로그인"
                    android:layout_marginRight="12dp"
                    app:layout_constraintBottom_toTopOf="@+id/transition_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_pwd" />
                <!--자동로그인 끝-->

            </LinearLayout>

            <com.royrodriguez.transitionbutton.TransitionButton
                android:id="@+id/transition_button"
                style="@style/LoginButton"
                android:layout_marginTop="40dp"
                android:background="@drawable/round_bg"
                android:text="LOGIN"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_pwd" />

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:text="로그인 시도 횟수: 5"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_registerf" />

            <TextView
                android:id="@+id/topView"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:background="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_wave"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/topView" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                app:layout_constraintEnd_toEndOf="@+id/topView"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="@+id/topView"
                app:layout_constraintTop_toTopOf="@+id/topView"
                app:srcCompat="@drawable/ic_baseline_account_circle_24" />

            <Button
                android:id="@+id/btn_registerf"
                style="@style/LoginButton"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_bg"
                android:text="Join"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/transition_button" />

            <Button
                android:id="@+id/button5"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_bg"
                android:text="X"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/et_email"
                app:layout_constraintEnd_toEndOf="@+id/et_email"
                app:layout_constraintTop_toTopOf="@+id/et_email" />





        </androidx.constraintlayout.widget.ConstraintLayout>