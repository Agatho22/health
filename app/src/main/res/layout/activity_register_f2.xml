<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/back"
    android:background="@drawable/login_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".RegisterActivityF2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--큰 레이아웃 없으면 안됌. 스크롤뷰는 하나의 위젯만 있어야하기때문-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <!--회사 로고-->
            <ImageView
                android:id="@+id/apple"
                android:layout_width="55dp"
                android:layout_height="66dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/apple"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:text="Create account"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="34sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="#808080"
                android:layout_marginTop="16dp"
                android:text="돌아오셨군요!\n로그인하여 다양한 컨텐츠를 누려보세요!"
                android:textSize="17sp" />




            <View
            android:id="@+id/view7"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topVIew" />

            <EditText
                android:id="@+id/et_name"
                style="@style/RegistarText"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_border"
                android:hint="이름"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_name"
                tools:ignore="TouchTargetSizeCheck" />


            <EditText
                android:id="@+id/et_height"
                style="@style/RegistarText"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_border"
                android:hint="키"
                android:inputType="numberDecimal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_name"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/et_weight"
                style="@style/RegistarText"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_border"
                android:hint="몸무게"
                android:inputType="numberDecimal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_height"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/et_age"
                style="@style/RegistarText"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_border"
                android:clickable="true"
                android:editable="false"
                android:focusable="false"
                android:hint="나이"
                android:inputType="date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_weight"
                tools:ignore="Deprecated,TouchTargetSizeCheck" />

        <RadioGroup
            android:id="@+id/rg_gender"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_age">

            <RadioButton
                android:id="@+id/rb_male"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_border"
                android:gravity="left|center"
                android:text="male"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/rb_female"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:background="@drawable/round_border"
                android:padding="0dp"
                android:text="female"
                tools:ignore="TouchTargetSizeCheck" />
        </RadioGroup>


        <Button
            android:id="@+id/btn_registerf2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="230dp"
            android:background="@drawable/round_bg"
            android:text="JOIN"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <!--
                <RadioGroup
                    android:id="@+id/rg_gender"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_age">

                    <RadioButton
                        android:id="@+id/rb_male"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/round_border"
                        android:gravity="left|center"
                        android:text="male" />

                    <RadioButton
                        android:id="@+id/rb_female"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/round_border"
                        android:padding="0dp"
                        android:text="female" />


                </RadioGroup>
        -->
        </LinearLayout>
    </ScrollView>
</LinearLayout>




