<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/back"
    android:background="@drawable/login_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".RegisterActivityF2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--큰 레이아웃 없으면 안됌. 스크롤뷰는 하나의 위젯만 있어야하기때문-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <!--회사 로고-->
            <ImageView
                android:id="@+id/CMYK"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/cmyk"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:text="Create account"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="34sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="#808080"
                android:layout_marginTop="16dp"
                android:text="돌아오셨군요!\n로그인하여 다양한 컨텐츠를 누려보세요!"
                android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_name"
                style="@style/LoginText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:hint="이름"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/et_height"
                style="@style/LoginText"
                android:layout_centerHorizontal="true"
                android:inputType="numberDecimal"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_marginTop="5dp"
                android:hint="키" />

            <EditText
                android:id="@+id/et_weight"
                style="@style/LoginText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:hint="몸무게"
                android:inputType="numberDecimal"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/et_age"
                style="@style/LoginText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:hint="나이"
                android:inputType="date"
                tools:ignore="Deprecated,TouchTargetSizeCheck"  />

            <RadioGroup
                android:id="@+id/rg_gender"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_age">

                <RadioButton
                    android:id="@+id/rb_male"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:text="남성"
                    tools:ignore="TouchTargetSizeCheck" />

                <RadioButton
                    android:id="@+id/rb_female"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:padding="0dp"
                    android:text="여성"
                    tools:ignore="TouchTargetSizeCheck" />
            </RadioGroup>

        </LinearLayout>


            <Button
                android:id="@+id/btn_registerf2"
                style="@style/LoginButton"
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_bg01"
                android:text="가입 하기"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>




